{
  "compilerOptions": {
    "ignoreDeprecations": "6.0",
    "target": "ES6",
    "module": "Commonjs",
    "rootDir": "src",
    "baseUrl": "./",
    "outDir": "dist",
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "typeRoots": [
      "./src/@types"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}